            //  label(for='distance') distance (miles)
            //  input.form-control(name='distance', id='distance', type='text', placeholder='distance from you')
            //br
            //.row
            .col-lg-3.col-md-3
              label(for='category') Category
              input.form-control(name='category', id='category', type='text', placeholder='bars, shopping, sushi...')
            .col-lg-2.col-md-2
              label(for='stars') Average Stars
              select.form-control(name='stars_range', id='stars', type='text')
                option(value='none') none
                option(value='>') above
                option(value='>=') above or equals
                option(value='=') equals
                option(value='<=') below or equals
                option(value='<') below
                option(value='<>') not
