  body
    style.
      html, body {
        height: 90%;
        margin: 10px;
        padding: 10px
      }
      .table td, th{
        text-align: center;
      }
    nav.navbar.navbar-inverse.navbar-fixed-top.sticky(role='navigation')
      .container
        ul.nav.navbar-nav.nav.pull-right(style="text-align: center;")
          li
            a(href='/homepage') HomePage
          li
            a(href='/users/my_feed') News Feed
          li
            if user_id
              a(href='/logout') LogOut
            else
              a(href='/login') Login
    br
    br
    .well
      form.form-horizontal(action='/business/search', method='GET')
        .form-group
          .row
            .col-lg-11.col-md-11
              label(for='name') Name
              input.form-control(name='name', id='name', type='text', placeholder='Search for Business')
            .col-lg-1.col-md-1.form-group(align='right')
              br
              button.btn.btn-info.btn-sm(type='submit') Search
          br
          .row
            .col-lg-2.col-md-2
              label(for='city') City
              input.form-control(name='city', id='city', type='text', placeholder='City')
            .col-lg-2.col-md-2
              label(for='state') State
              select.form-control(name='state', id='state', type='text', placeholder='State')
