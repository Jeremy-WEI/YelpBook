extends layout
block content
  form(enctype='multipart/form-data', action='/users/upload', method='POST')
    .form-group
      .row
        .col-md-8
          input#new_post.form-control(name='new_post', placeholder='New Post', type='textarea', rows='4', cols='50')
        .col-md-4
          input(type='submit', value='Post')
      .row
        .col-md-8
          input(type='file', name='photo', accept="image/*")